<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

	<div class="page_headers" style="width: 500px;">
		<div class="title">${message:personal_password_modify}</div>
		<t:form t:id="edit" class="form">
			<t:errors/>
			<table>
				<tr>
					<td style="text-align:right;padding-right:10px; width: 70px;">${message:user_name}</td>
					<td>${user.name}</td>
				</tr>
				
				<tr>
					<td style="text-align:right;padding-right:10px;">${message:new_password}</td>
					<td><t:passwordfield t:id="password" t:value="password"/></td>
				</tr>
				<tr>
					<td style="white-space:nowrap;text-align:right;padding-right:10px;">${message:confirm_password}</td>
					<td><t:passwordfield t:id="confirmPassword" t:value="confirmPassword"/></td>
				</tr>
				<tr>
					<td colspan="2" style="text-align: center;">
						<input type="submit" value="${message:edit1}"/>
					</td>
				</tr>
			</table>
		</t:form>
	</div>
	
</html>